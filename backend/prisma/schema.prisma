generator client {
  provider = "prisma-client-js"
  seed = "ts-node prisma/seed.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  points    Int      @default(500)
  equippedOutfitId Int?  // ID of currently equipped outfit
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  dailyQuests   DailyQuest[]
  monthlyQuests MonthlyQuest[]
  userOutfits   UserOutfit[]

  @@index([email])
  @@map("users")
}

model DailyQuest {
  id            Int       @id @default(autoincrement())
  userId        Int
  date          DateTime
  quests        Json
  journalPrompts Json
  completedAt   DateTime? @map("completed_at")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @default(now()) @updatedAt @map("updated_at")  // Add @default(now())

  user          User      @relation(fields: [userId], references: [id])

  @@unique([userId, date])
  @@map("daily_quests")
}

model MonthlyQuest {
  id           Int       @id @default(autoincrement())
  userId       Int
  month        String    // format: YYYY-MM
  monthlyQuests Json

  user         User      @relation(fields: [userId], references: [id])

  @@unique([userId, month])
  @@map("monthly_quests")
}

model Outfit {
  id          Int         @id @default(autoincrement())
  name        String
  description String
  image       String
  price       Int
  rarity      OutfitRarity
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")

  userOutfits UserOutfit[]

  @@map("outfits")
}

model UserOutfit {
  id       Int      @id @default(autoincrement())
  userId   Int
  outfitId Int
  equipped Boolean  @default(false)
  ownedAt  DateTime @default(now()) @map("owned_at")

  user   User   @relation(fields: [userId], references: [id])
  outfit Outfit @relation(fields: [outfitId], references: [id])

  @@unique([userId, outfitId])
  @@map("user_outfits")
}

enum OutfitRarity {
  COMMON
  RARE
  EPIC
  LEGENDARY
}
