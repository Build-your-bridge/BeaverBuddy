generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  dailyQuests   DailyQuest[]
  monthlyQuests MonthlyQuest[]

  @@index([email])
  @@map("users")
}

model DailyQuest {
  id            Int       @id @default(autoincrement())
  userId        Int
  date          DateTime
  quests        Json
  journalPrompts Json

  user          User      @relation(fields: [userId], references: [id])

  @@unique([userId, date])
  @@map("daily_quests")
}

model MonthlyQuest {
  id           Int       @id @default(autoincrement())
  userId       Int
  month        String    // format: YYYY-MM
  monthlyQuests Json

  user         User      @relation(fields: [userId], references: [id])

  @@unique([userId, month])
  @@map("monthly_quests")
}
